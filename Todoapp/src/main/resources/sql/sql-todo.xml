<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todoapp.mapper.TodoMapper">

    <select id="getAllTodos" resultType="com.example.todoapp.dto.DataDTO">
        SELECT * FROM todos
    </select>

    <insert id="insertTodo">
        INSERT INTO todos(todo) VALUES(#{todo})
    </insert>

    <delete id="deleteTodo">
        DELETE FROM todos WHERE id = #{id}
    </delete>

    <update id="updateTodo" parameterType="com.example.todoapp.dto.DataDTO">
        UPDATE todos
        SET todo = #{todo}, is_done = #{isDone}
        WHERE id = #{id}
    </update>

</mapper>